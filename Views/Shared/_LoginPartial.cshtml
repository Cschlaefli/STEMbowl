@using Microsoft.AspNetCore.Identity
@using stembowl.Areas.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<span></span>
@if(SignInManager.IsSignedIn(User))
{

    

    
        
    

    <form asp-area="Identity"
        asp-page="/Account/Logout"
        asp-route-returnUrl="@Url.Page("/")"
        method="post" id="logoutForm" class="navbar-right form-inline">
            <ul class="navbar-nav">
                <li class="navbar-item">
                    <div class="dropdown-show">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Hello @UserManager.GetUserName(User)
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdownMenuLink">
                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    Manage account
                            </a>
                            <button type="submit" class="dropdown-item">Logout</button>
                        </div>
                    </div>
                </li>
                        
                    </ul>  
    </form> 
            
           
            
      
    
}
else
{
    <ul class="navbar-nav">
        <li class="navbar-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="navbar-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}
